<mui:ModernWindow x:Class="SugarDesk.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI" xmlns:ui="clr-namespace:SugarDesk"
        IsTitleVisible="False"
        WindowStartupLocation="CenterScreen"
        MinHeight="900"
        MinWidth="1250"
        mc:Ignorable="d"
        d:DesignHeight="600"
        d:DesignWidth="800"
        ContentSource = "{Binding Path=ContentSourceUrl}"
        MenuLinkGroups ="{Binding Path=MenuLinkGroups}"
        Style="{StaticResource TitledWindow}" >

    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="settings" Source="/Pages/SettingsPage.xaml" />
        <mui:Link DisplayName="help" Source="https://github.com/mattkol/SugarDesk" />
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>



